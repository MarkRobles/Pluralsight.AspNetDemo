@model Pluralsight.AspNetDemo.Models.RegisterModel

<div class="row">
    <div class="col-12">
        <h1>Registration</h1>
    </div>
    <div class="col-12">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.ValidationSummary()
            @Html.LabelFor(x => x.UserName);
            <br>
            @Html.TextBoxFor(x => x.UserName);
            <br>
            @Html.LabelFor(x => x.FullName);
            <br>
            @Html.TextBoxFor(x => x.FullName);
            <br>
            @Html.LabelFor(x => x.AddressLine);
            <br>
            @Html.TextBoxFor(x => x.AddressLine);
            <br>
            @Html.LabelFor(x => x.Country);
            <br>
            @Html.TextBoxFor(x => x.Country);
            <br>
            @Html.LabelFor(x => x.Password);
            <br>
            @Html.TextBoxFor(x => x.Password);
            <br>



            <div class="col-12">
                <strong>@Html.Label("Roles")</strong>
                <br>
                @Html.DropDownList("role", (IEnumerable
                  <SelectListItem>)ViewBag.Roles)
            </div>
            <br>
            <input type="submit" class="btn" value="Register">
        }
    </div>
</div>


<hr>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
}
<script>
    $(function () {

        $("select").change(function () {
            var str = "";
            $("select option:selected").each(function () {
                str += $(this).text() + " ";
            });
            //$("#role").val(str);
        }).change();
    });
</script>